<%= render partial: 'application/header', layout: 'header' %>
<%= render partial: 'application/body', layout: 'body' %>

<div class="myDiv" >
  <h1>All Veterinary Offices</h1>
</div>

<%= link_to "Sort by number of veterinarians",
  'veterinary_offices?sort=veterinarian_count' %>

<% @veterinary_offices.each do |office| %>
  <div class="body" >
    <div id="veterinary-office-<%= office.id %>">
      <h3><%= office.name %></h3>
      <p>Created at: <%= office.created_at %></p>
      <%= link_to "Update #{office.name}", "/veterinary_offices/#{office.id}/edit" %>
      <%= link_to "Delete #{office.name}", "/veterinary_offices/#{office.id}", method: :delete %>
    </div>
  </div>
<% end %>
