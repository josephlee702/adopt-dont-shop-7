<%= render partial: 'application/header', layout: 'header' %>
<%= render partial: 'application/body', layout: 'body' %>

<div class="myDiv" >
  <h1>Edit Pet</h1>
</div>

<div class="body" >
  <%= form_with url: "/pets/#{@pet.id}", method: :patch, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :breed %>
    <%= f.text_field :breed %>

    <%= f.label :adoptable %>
    <%= f.check_box :adoptable %>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.submit %>
  <% end %>
</div>
