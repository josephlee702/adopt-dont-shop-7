<%= render partial: 'application/header', layout: 'header' %>
<%= render partial: 'application/body', layout: 'body' %>

<div class="myDiv" >
  <h1><%= @pet.name %></h1>
</div>

<div class="body" >
  <h3>Age: <%= @pet.age %> years old</h3>
  <h3>Breed: <%= @pet.breed %></h3>
  <h3>Adoptable: <%= @pet.adoptable %></h3>
  <h3>You can find me at <%= @pet.shelter_name %>!</h3>
  <p><%= link_to "Update #{@pet.name}", "pets/#{@pet.id}/edit" %></p>
  <p><%= link_to "Delete #{@pet.name}", "/pets/#{@pet.id}", method: :delete %></p>
</div>
