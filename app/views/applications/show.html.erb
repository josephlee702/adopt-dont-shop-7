<p><u>Name</u>: <%= @application.name %></p>
<p><u>Address</u>: <%= @application.full_address %> </p>
<p><u>Why would you make a good home?</u>: <%= @application.description %> </p>
<p><u>Application to Adopt</u>:</p>
<p><u>Status</u>: <%= @application.status %> </p>

<h3><u>Add a pet to this application</u>:</h3>
<%= form_with url:"/applications/#{@application.id}", method: :get, local: :true do |f| %>
  <%= f.label "#{:search} for a pet name:" %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<%end%>

