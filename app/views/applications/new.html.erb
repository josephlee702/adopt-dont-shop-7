<%= render partial: 'application/header', layout: 'header' %>
<%= render partial: 'application/body', layout: 'body' %>

<div class="myDiv" >
  <h1>New Application</h1>
</div>

<div class="body" >
  <%= form_with url: "/applications/#{:application_id}", method: :post, local: true do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :street_address %>
    <%= form.text_field :street_address %>
    <%= form.label :city %>
    <%= form.text_field :city %>
    <%= form.label :state %>
    <%= form.text_field :state %>
    <%= form.label :zip_code %>
    <%= form.text_field :zip_code %>
    <p><%= form.label :"Why would you be a good home?" %></p>
    <p><%= form.text_area :description %></p>
    <%= form.submit 'Submit Application' %>
  <% end %>
</div>
